    <script>
       
        $(document).on('click', '#allow_st', function (e) {
            
            var student_ids = [], group_number, file;
            $.each($("input[type='checkbox']:checked"), function () {
                student_ids.push($(this).attr('id'));
            });
            group_number = $('#gr').val();

            ////////////////////////////////////////////////
            var data = new FormData($('#form1')[0]);
            data.append('Number', group_number);
           data.append('IDs', student_ids);
            $.ajax({
                url: '/upload1',
                data: data,
                type: 'POST',
                processData: false,
                contentType: false,
                success: function (data) {
                    alert(data);
                }
            });
        });


    </script>
</head>

